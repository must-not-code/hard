.col-md-12
  #carousel.carousel.slide data-ride='carousel'
    ol.carousel-indicators
      li.active data-slide-to='0' data-target='#carousel'
      li data-slide-to='1' data-target='#carousel'
    .carousel-inner
      .item.active
        = link_to crew_path('lol') do
          = image_tag 'lol_carousel.png'
          .carousel-caption
            h1 Команда по<br>League of Legends
      .item
        = link_to post_path(161) do
          = image_tag 'iit_carousel.png'
          .carousel-caption
            h1 International<br>Invintational Tournament
    a.left.carousel-control data-slide='prev' href='#carousel'
      = fa_icon 'chevron-left', class: 'chevron'
    a.right.carousel-control data-slide='next' href='#carousel'
      = fa_icon 'chevron-right', class: 'chevron'
  br
