.col-md-8
  .well
    %h2
      = link_to @stream.streamer, stream_path(@stream.channel)
    %hr
    .overflow
      %object{data: "http://www.twitch.tv/widgets/live_embed_player.swf", height: "100%", type: "application/x-shockwave-flash", width: "100%"}
        %param{name: "allowFullScreen", value: "true"}
        %param{name: "allowScriptAccess", value: "always"}
        %param{name: "allowNetworking", value: "all"}
        %param{name: "flashvars", value: "hostname=www.twitch.tv&channel=#{@stream.channel}&auto_play=false&start_volume=100"}
